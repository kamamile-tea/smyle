
<div class="container">
<div class="shopoutfits" name="shopoutfits">
    <style>
        .shopoutfits {
            background-image: url('/images/shoppingcart.jpeg');
            background-attachment: fixed; 
            background-size: 100% 100%;
            height: 200px ;
            width: 100%;
        }
    </style>
    <div class="text" name="text">
        <h1 name="text">Shop Outfits</h1>
        <style>
        .text {
            height: 200px ;
            width: 100%;
            text-align: center;
            margin-left: 15px;
        }
    </style>
    </div>
</div>
</div>

<div class="container">
            <div class="row">
              <div class="col-md-4" data-aos="fade-in">
                  <center>
                      <button type="button" style="background-color:#c70c16; border-radius: 10px;" class="btn btn-primary hover-green"><h4 style="margin-top:10px;">Casual</h4></button>
                  </center>
</div>
<div class="col-md-4" data-aos="fade-in">
                  <center>
                      <button type="button" style="background-color:#c70c16; border-radius: 10px;" class="btn btn-primary hover-green"><h4 style="margin-top:10px;">Work</h4></button>
                  </center>
</div>
<div class="col-md-4" data-aos="fade-in">
                  <center>
                      <button type="button" style="background-color:#c70c16; border-radius: 10px;" class="btn btn-primary hover-green"><h4 style="margin-top:10px;">Party</h4></button>
                  </center>
</div>
            </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>


{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
